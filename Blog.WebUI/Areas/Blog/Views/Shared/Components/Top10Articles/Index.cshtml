@model IEnumerable<ArticalDTO>

@foreach (var article in Model)
{
    <div class="col-lg-2 m-3">
        <div class="card mb-4">
            @if (article.ImagePath == null)
            {
                <a href="/Blog/Home/Article?articleID=@article.ArticleID"><img class="card-img-top" src="~/Images/default-image.jpg" alt="..." width="750" height="350" /></a>
            }
            else
            {
                <a href="/Blog/Home/Article?articleID=@article.ArticleID"><img class="card-img-top" src="~/Images/ArticalImages/@article.ImagePath" alt="..." width="750" height="350" /></a>
            }
            <div class="card-body">
                <div class="card-body">
                    <div class="small text-muted">@article.CategoryName - @article.NumberOfClick Tıklama</div>
                    <h2 class="card-title h4">@article.Title</h2>
                    <p class="card-text">@article.Description</p>
                    <a class="btn btn-primary" href="/Blog/Home/Article?articleID=@article.ArticleID">Devam Et →</a>
                </div>
            </div>
        </div>
        </div>
        }

